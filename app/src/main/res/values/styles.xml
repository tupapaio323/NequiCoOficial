<resources>
    <style name="PinKeyButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/pin_button_ripple</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/numero_regular</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="HintTextAppearanceFocused" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#e10080</item>
    </style>
</resources> 