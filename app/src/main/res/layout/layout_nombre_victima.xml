<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#200020">

    <!-- Flecha de regreso en la esquina superior izquierda -->
    <ImageView
        android:id="@+id/ivFlechaRegresoNombre"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="Regresar"
        android:focusable="true"
        android:src="@drawable/ic_arrow_back_white_24" />

    <!-- Título "Nombre de la víctima" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/moneda_bold"
        android:text="Nombre de la víctima"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <!-- Campo para nombre de la víctima -->
    <EditText
        android:id="@+id/etNombreVictima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/edit_text_background"
        android:fontFamily="@font/moneda_regular"
        android:gravity="center"
        android:hint="Ingresa el nombre"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        android:textSize="18sp" />

    <!-- Botón Guardar Contacto -->
    <Button
        android:id="@+id/btnGuardarContactoVictima"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/rounded_button_pink"
        android:fontFamily="@font/moneda_bold"
        android:text="Guardar Contacto"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <!-- Botón Cancelar -->
    <Button
        android:id="@+id/btnCancelarContacto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/edit_text_background"
        android:fontFamily="@font/moneda_regular"
        android:text="Cancelar"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</RelativeLayout> 