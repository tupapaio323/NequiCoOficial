<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#200020">

    <!-- Flecha de regreso -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_arrow_back_white_24"
        android:contentDescription="Regresar" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivBack"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/moneda_bold"
        android:text="Escribe tu clave"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />

    <LinearLayout
        android:id="@+id/pinContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pinBox1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/pin_box_bg"
            android:gravity="center"
            android:text=""
            android:textColor="#200020"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/pinBox2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/pin_box_bg"
            android:gravity="center"
            android:text=""
            android:textColor="#200020"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/pinBox3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/pin_box_bg"
            android:gravity="center"
            android:text=""
            android:textColor="#200020"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/pinBox4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/pin_box_bg"
            android:gravity="center"
            android:text=""
            android:textColor="#200020"
            android:textSize="28sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pinContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/moneda_regular"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="No dudamos que seas tu...\nPero es mejor confirmar :)"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />

    <GridLayout
        android:id="@+id/keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSubtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:rowCount="4"
        android:columnCount="3">

        <!-- Fila 1 -->
        <Button android:id="@+id/btn1" style="@style/PinKeyButton" android:text="1" android:layout_width="80dp" android:layout_height="60dp" android:textSize="32sp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginTop="0dp" android:layout_marginBottom="0dp" />
        <Button android:id="@+id/btn2" style="@style/PinKeyButton" android:text="2" android:layout_width="80dp" android:layout_height="60dp" android:textSize="32sp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginTop="0dp" android:layout_marginBottom="0dp" />
        <Button android:id="@+id/btn3" style="@style/PinKeyButton" android:text="3" android:layout_width="80dp" android:layout_height="60dp" android:textSize="32sp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginTop="0dp" android:layout_marginBottom="0dp" />
        <!-- Fila 2 -->
        <Button android:id="@+id/btn4" style="@style/PinKeyButton" android:text="4" android:layout_width="80dp" android:layout_height="60dp" android:textSize="32sp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginTop="0dp" android:layout_marginBottom="0dp" />
        <Button android:id="@+id/btn5" style="@style/PinKeyButton" android:text="5" android:layout_width="80dp" android:layout_height="60dp" android:textSize="32sp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginTop="0dp" android:layout_marginBottom="0dp" />
        <Button android:id="@+id/btn6" style="@style/PinKeyButton" android:text="6" android:layout_width="80dp" android:layout_height="60dp" android:textSize="32sp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginTop="0dp" android:layout_marginBottom="0dp" />
        <!-- Fila 3 -->
        <Button android:id="@+id/btn7" style="@style/PinKeyButton" android:text="7" android:layout_width="80dp" android:layout_height="60dp" android:textSize="32sp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginTop="0dp" android:layout_marginBottom="0dp" />
        <Button android:id="@+id/btn8" style="@style/PinKeyButton" android:text="8" android:layout_width="80dp" android:layout_height="60dp" android:textSize="32sp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginTop="0dp" android:layout_marginBottom="0dp" />
        <Button android:id="@+id/btn9" style="@style/PinKeyButton" android:text="9" android:layout_width="80dp" android:layout_height="60dp" android:textSize="32sp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginTop="0dp" android:layout_marginBottom="0dp" />
        <!-- Fila 4 -->
        <View android:layout_width="80dp" android:layout_height="60dp" />
        <Button android:id="@+id/btn0" style="@style/PinKeyButton" android:text="0" android:layout_width="80dp" android:layout_height="60dp" android:textSize="32sp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginTop="0dp" android:layout_marginBottom="0dp" />
        <ImageView android:id="@+id/btnDelete" android:layout_width="80dp" android:layout_height="60dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginTop="0dp" android:layout_marginBottom="0dp" android:background="@drawable/delete_button_ripple" android:src="@android:color/transparent" android:scaleType="fitCenter" android:padding="15dp" android:clickable="true" android:focusable="true" />

    </GridLayout>

    <TextView
        android:id="@+id/tvForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/keyboard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:drawableBottom="@drawable/underline_bg"
        android:drawablePadding="4dp"
        android:fontFamily="@font/moneda_regular"
        android:paddingBottom="4dp"
        android:text="¿Se te olvidó?"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />

</RelativeLayout> 