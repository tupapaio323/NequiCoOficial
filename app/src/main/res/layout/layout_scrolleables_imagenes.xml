<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hsvImages"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignTop="@id/ivBackground"
    android:layout_marginTop="@dimen/scroll_images_margin_bottom"
    android:scrollbars="none"
    android:overScrollMode="always"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">











        <!-- Imagen tuplata.bin -->
        <ImageView
            android:id="@+id/ivTuplata"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="Imagen Tuplata"
            android:src="@android:color/transparent" />

        <!-- Imagen min.bin -->
        <ImageView
            android:id="@+id/ivMin"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="Imagen Min"
            android:src="@android:color/transparent" />

        <!-- Imagen salir.bin -->
        <ImageView
            android:id="@+id/ivSalir"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="Imagen Salir"
            android:src="@android:color/transparent" />

    </LinearLayout>

</HorizontalScrollView> 