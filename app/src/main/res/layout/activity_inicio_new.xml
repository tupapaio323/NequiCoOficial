<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#200020">

    <!-- Fondo de inicio (FIJO) -->
    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:contentDescription="Fondo de inicio"
        android:scaleType="centerCrop"
        android:src="@android:color/transparent" />

    <!-- Header con usuario y saldo -->
    <include
        android:id="@+id/layoutHeader"
        layout="@layout/layout_header_inicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <!-- Elementos flotantes (lápiz, imágenes de navegación) -->
    <include
        android:id="@+id/layoutElementosFlotantes"
        layout="@layout/layout_elementos_flotantes"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



    <!-- Scrolleables de imágenes -->
    <include
        android:id="@+id/layoutScrolleablesImagenes"
        layout="@layout/layout_scrolleables_imagenes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <!-- Botones de navegación -->
    <include
        android:id="@+id/layoutNavigationButtons"
        layout="@layout/layout_navigation_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <!-- Botones invisibles adicionales -->
    <Button
        android:id="@+id/btn5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:background="@android:color/transparent" />

    <!-- Layouts adicionales que se incluirán dinámicamente -->
    <FrameLayout
        android:id="@+id/containerLayouts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout> 