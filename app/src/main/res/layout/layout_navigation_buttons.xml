<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llBotones"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="20dp"
    android:orientation="horizontal">

    <!-- Botón 1 -->
    <Button
        android:id="@+id/btn1"
        android:layout_width="@dimen/button_size_medium"
        android:layout_height="@dimen/button_size_medium"
        android:layout_marginStart="20dp"
        android:alpha="0"
        android:background="@drawable/button_background"
        android:contentDescription="Botón 1"
        android:text="1"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_size_medium" />

    <!-- Botón 2 -->
    <Button
        android:id="@+id/btn2"
        android:layout_width="@dimen/button_size_medium"
        android:layout_height="@dimen/button_size_medium"
        android:layout_marginStart="30dp"
        android:alpha="0"
        android:background="@drawable/button_background"
        android:contentDescription="Botón 2"
        android:text="2"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_size_medium" />

    <!-- Botón 3 -->
    <Button
        android:id="@+id/btn3"
        android:layout_width="@dimen/button_size_medium"
        android:layout_height="@dimen/button_size_medium"
        android:layout_marginStart="30dp"
        android:alpha="0"
        android:background="@drawable/button_background"
        android:contentDescription="Botón 3"
        android:text="3"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_size_medium" />

    <!-- Botón 4 -->
    <Button
        android:id="@+id/btn4"
        android:layout_width="@dimen/button_size_medium"
        android:layout_height="@dimen/button_size_medium"
        android:layout_marginStart="30dp"
        android:alpha="0"
        android:background="@drawable/button_background"
        android:contentDescription="Botón 4"
        android:text="4"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_size_medium" />

</LinearLayout> 